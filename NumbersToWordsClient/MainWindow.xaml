<Window x:Class="NumbersToWordsClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Title="NumbersToWords" Height="379.834" Width="470.686">
    <Grid>
        <TextBox HorizontalAlignment="Left" VerticalContentAlignment="Center"  Height="26" Margin="71,42,0,0" Text="{Binding MoneyInput}" TextWrapping="Wrap" VerticalAlignment="Top" Width="260"/>
        <Label Content="Number:" HorizontalAlignment="Left" Margin="10,42,0,0" VerticalAlignment="Top"/>
        <Label Content="Text: " HorizontalAlignment="Left" Margin="10,73,0,0" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="71,78,0,0" TextWrapping="Wrap" Text="{Binding MoneyText, Mode=OneWay}" VerticalAlignment="Top" Height="261" Width="382"/>
        <Button Content="Translate" HorizontalAlignment="Left" Margin="359,42,0,0" VerticalAlignment="Top" Width="80" Height="26" Click="Button_Click"/>
    </Grid>
</Window>
